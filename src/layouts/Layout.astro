---
import '../styles/global.css'

export interface Props {
  title: string;
  description?: string;
}

const { title, description = "YasDownload.Pro - Download iOS shortcuts and tools" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" data-theme="yasdownload">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    
    <!-- Favicon -->
    <link rel="apple-touch-icon" sizes="180x180" href="/favicon/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon/favicon-16x16.png">
    <link rel="manifest" href="/favicon/site.webmanifest">
    <link rel="shortcut icon" href="/favicon/favicon.ico">
    
    <!-- Preload fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    
    <!-- Additional meta tags for better SEO -->
    <meta name="theme-color" content="#efc902" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <meta name="msapplication-TileColor" content="#efc902">
    <meta name="msapplication-config" content="/favicon/browserconfig.xml">
  </head>
  <body class="bg-base-100 text-base-content antialiased">
    <slot />
    
    <script>
      // Load ads after page loads
      document.addEventListener('DOMContentLoaded', function() {
        // Set global ad options
        window.atOptions = {
          'key': '826f292d2220f0443cf1b759ae9a729c',
          'format': 'iframe',
          'height': 250,
          'width': 300,
          'params': {}
        };
        
        // Load ad scripts for main page (3 ads)
        const mainAdContainer1 = document.getElementById('main-ad-container-1');
        if (mainAdContainer1) {
          const script1 = document.createElement('script');
          script1.type = 'text/javascript';
          script1.src = '//pregnantskipper.com/826f292d2220f0443cf1b759ae9a729c/invoke.js';
          script1.async = true;
          mainAdContainer1.innerHTML = '';
          mainAdContainer1.appendChild(script1);
        }

        const mainAdContainer2 = document.getElementById('main-ad-container-2');
        if (mainAdContainer2) {
          const script2 = document.createElement('script');
          script2.type = 'text/javascript';
          script2.src = '//pregnantskipper.com/826f292d2220f0443cf1b759ae9a729c/invoke.js';
          script2.async = true;
          mainAdContainer2.innerHTML = '';
          mainAdContainer2.appendChild(script2);
        }

        const mainAdContainer3 = document.getElementById('main-ad-container-3');
        if (mainAdContainer3) {
          const script3 = document.createElement('script');
          script3.type = 'text/javascript';
          script3.src = '//pregnantskipper.com/826f292d2220f0443cf1b759ae9a729c/invoke.js';
          script3.async = true;
          mainAdContainer3.innerHTML = '';
          mainAdContainer3.appendChild(script3);
        }
        
        // Load ad script for hero top section
        const heroTopAdContainer = document.getElementById('hero-top-ad-container');
        if (heroTopAdContainer) {
          const script4 = document.createElement('script');
          script4.type = 'text/javascript';
          script4.src = '//pregnantskipper.com/826f292d2220f0443cf1b759ae9a729c/invoke.js';
          script4.async = true;
          heroTopAdContainer.innerHTML = '';
          heroTopAdContainer.appendChild(script4);
        }

        // Load ad script for hero section
        const heroAdContainer = document.getElementById('hero-ad-container');
        if (heroAdContainer) {
          const script5 = document.createElement('script');
          script5.type = 'text/javascript';
          script5.src = '//pregnantskipper.com/826f292d2220f0443cf1b759ae9a729c/invoke.js';
          script5.async = true;
          heroAdContainer.innerHTML = '';
          heroAdContainer.appendChild(script5);
        }
        
        // Load ad script for download section
        const downloadAdContainer = document.getElementById('download-ad-container');
        if (downloadAdContainer) {
          const script6 = document.createElement('script');
          script6.type = 'text/javascript';
          script6.src = '//pregnantskipper.com/826f292d2220f0443cf1b759ae9a729c/invoke.js';
          script6.async = true;
          downloadAdContainer.innerHTML = '';
          downloadAdContainer.appendChild(script6);
        }
      });
    </script>
  </body>
</html>