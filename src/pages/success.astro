<style>
  /* Ad Grid Layout */
  .ad-grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0;
    width: 100%;
    max-width: 100vw;
    margin: 0;
    padding: 0;
  }
  
  /* Ad Container Styles */
  .ad-container {
    flex: 0 0 50%;
    width: 300px;
    height: 250px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    overflow: visible;
    position: relative;
    margin: 0;
    padding: 0;
  }
  
  /* Full size ads - no scaling */
  .ad-container iframe,
  .ad-container > div {
    width: 300px !important;
    height: 250px !important;
    transform: none;
    border: none;
  }
  
  /* Desktop - Single column layout */
  @media (min-width: 769px) {
    .ad-grid {
      flex-direction: column;
      align-items: center;
      justify-content: center;
      max-width: 100%;
      gap: 0;
    }
    
    .ad-container {
      flex: none;
      max-width: 300px;
      width: 300px;
      height: 250px;
      margin: 0;
      padding: 0;
    }
    
    .ad-container iframe,
    .ad-container > div {
      transform: none;
    }
  }
  
  /* Tablet - 2x2 with full size ads */
  @media (min-width: 641px) and (max-width: 768px) {
    .ad-grid {
      justify-content: center;
    }
    
    .ad-container {
      width: 300px;
      height: 250px;
    }
    
    .ad-container iframe,
    .ad-container > div {
      transform: none;
    }
  }
  
  /* Mobile - Full size ads */
  @media (max-width: 640px) {
    .ad-grid {
      gap: 0;
      padding: 0;
      flex-direction: column;
      align-items: center;
    }
    
    .ad-container {
      width: 300px;
      height: 250px;
      flex: none;
      margin: 0;
      padding: 0;
    }
    
    .ad-container iframe,
    .ad-container > div {
      transform: none;
    }
  }
  
  /* Small mobile - Full size ads */
  @media (max-width: 480px) {
    .ad-container {
      width: 300px;
      height: 250px;
    }
    
    .ad-container iframe,
    .ad-container > div {
      transform: none;
    }
  }
  
  /* Extra small screens - Full size ads */
  @media (max-width: 380px) {
    .ad-container {
      width: 300px;
      height: 250px;
    }
    
    .ad-container iframe,
    .ad-container > div {
      transform: none;
    }
  }
  
  /* Ensure mobile-first layout */
  body {
    overflow-x: hidden;
  }
  
  /* Button hover effects */
  .transition-colors {
    transition: background-color 0.2s ease-in-out;
  }
  
  /* Compact Success Section */
  .success-section {
    text-align: center;
    max-width: 350px;
    margin: 0 auto;
    padding: 12px;
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.1), rgba(147, 51, 234, 0.1));
    border-radius: 15px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
  }
  
  .success-icon {
    margin-bottom: 8px;
    animation: bounce 2s infinite;
  }
  
  .success-icon span {
    font-size: 3rem !important;
  }
  
  .success-title {
    font-size: 1.5rem;
    font-weight: 800;
    color: #ffffff;
    margin-bottom: 10px;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
  }
  
  .success-content {
    font-size: 0.85rem;
    line-height: 1.4;
  }
  
  .success-main-text {
    color: #ffffff;
    margin-bottom: 5px;
    font-size: 0.95rem;
  }
  
  .success-sub-text {
    color: #d1d5db;
    margin-bottom: 4px;
  }
  
  .highlight {
    color: #60a5fa;
    text-decoration: underline;
    text-decoration-color: rgba(96, 165, 250, 0.5);
  }
  
  .instagram-shortcut {
    margin-top: 12px;
  }
  
  .instagram-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #e1306c, #fd1d1d, #f77737, #fcaf45);
    color: white;
    padding: 10px 15px;
    border-radius: 12px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    box-shadow: 0 3px 10px rgba(225, 48, 108, 0.3);
    border: none;
    cursor: pointer;
  }
  
  .instagram-btn:hover {
    transform: translateY(-1px);
    box-shadow: 0 4px 15px rgba(225, 48, 108, 0.4);
    background: linear-gradient(135deg, #d12a5b, #e91e1e, #e66d2e, #f0a040);
  }
  
  .instagram-icon {
    font-size: 1.2rem;
    margin-right: 8px;
  }
  
  .instagram-text {
    text-align: left;
  }
  
  .instagram-title {
    font-size: 0.9rem;
    font-weight: 700;
    line-height: 1.1;
  }
  
  .instagram-subtitle {
    font-size: 0.7rem;
    opacity: 0.9;
    line-height: 1.1;
  }
  
  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% {
      transform: translateY(0);
    }
    40% {
      transform: translateY(-10px);
    }
    60% {
      transform: translateY(-5px);
    }
  }
  
  /* Stunning TikTok Action Cards */
  .tiktok-actions {
    max-width: 400px;
    margin: 0 auto;
    padding: 0;
  }
  
  .actions-container {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }
  
  .tiktok-card {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 20px 24px;
    border-radius: 20px;
    text-decoration: none;
    color: white;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    border: 1px solid rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(20px);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
  }
  
  .card-glow {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    opacity: 0;
    background: linear-gradient(45deg, rgba(255, 255, 255, 0.1), transparent);
    transition: opacity 0.3s ease;
    pointer-events: none;
  }
  
  .tiktok-card:hover .card-glow {
    opacity: 1;
  }
  
  .back-card {
    background: linear-gradient(135deg, #000000 0%, #ff0050 50%, #000000 100%);
    background-size: 200% 200%;
    animation: gradientShift 3s ease infinite;
  }
  
  .back-card:hover {
    transform: translateY(-4px) scale(1.02);
    box-shadow: 0 16px 48px rgba(255, 0, 80, 0.4);
    background-position: 100% 100%;
  }
  
  .open-card {
    background: linear-gradient(135deg, #ff0050 0%, #000000 50%, #ff0050 100%);
    background-size: 200% 200%;
    animation: gradientShift 3s ease infinite reverse;
  }
  
  .open-card:hover {
    transform: translateY(-4px) scale(1.02);
    box-shadow: 0 16px 48px rgba(0, 0, 0, 0.6);
    background-position: 100% 100%;
  }
  
  .card-content {
    display: flex;
    align-items: center;
    gap: 16px;
    flex: 1;
  }
  
  .card-icon {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.15);
    border-radius: 12px;
    backdrop-filter: blur(10px);
    transition: all 0.3s ease;
  }
  
  .tiktok-card:hover .card-icon {
    background: rgba(255, 255, 255, 0.25);
    transform: rotate(5deg) scale(1.1);
  }
  
  .card-icon svg {
    width: 24px;
    height: 24px;
    stroke: currentColor;
  }
  
  .card-text h3 {
    font-size: 1.2rem;
    font-weight: 700;
    margin: 0 0 4px 0;
    line-height: 1.2;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
  }
  
  .card-text p {
    font-size: 0.9rem;
    margin: 0;
    opacity: 0.9;
    line-height: 1.3;
  }
  
  .card-arrow {
    font-size: 1.5rem;
    font-weight: bold;
    opacity: 0.7;
    transition: all 0.3s ease;
    margin-left: 16px;
  }
  
  .tiktok-card:hover .card-arrow {
    opacity: 1;
    transform: translateX(4px);
  }
  
  @keyframes gradientShift {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }
  
  /* Mobile responsiveness for success section */
  @media (max-width: 480px) {
    .success-section {
      max-width: 320px;
      padding: 10px;
    }
    
    .success-title {
      font-size: 1.3rem;
      margin-bottom: 8px;
    }
    
    .success-icon {
      margin-bottom: 6px;
    }
    
    .success-icon span {
      font-size: 2.5rem !important;
    }
    
    .instagram-btn {
      padding: 8px 12px;
    }
    
    .instagram-icon {
      font-size: 1.1rem;
      margin-right: 6px;
    }
    
    .instagram-shortcut {
      margin-top: 10px;
    }
    
    .tiktok-actions {
      max-width: 350px;
    }
    
    .actions-container {
      gap: 12px;
    }
    
    .tiktok-card {
      padding: 16px 20px;
    }
    
    .card-content {
      gap: 12px;
    }
    
    .card-icon {
      width: 40px;
      height: 40px;
    }
    
    .card-icon svg {
      width: 20px;
      height: 20px;
    }
    
    .card-text h3 {
      font-size: 1rem;
    }
    
    .card-text p {
      font-size: 0.8rem;
    }
    
    .card-arrow {
      font-size: 1.3rem;
      margin-left: 12px;
    }
  }
</style>

