<style>
  /* Ad Grid Layout */
  .ad-grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0;
    width: 100%;
    max-width: 100vw;
    margin: 0;
    padding: 0;
  }
  
  /* Ad Container Styles */
  .ad-container {
    flex: 0 0 50%;
    width: 300px;
    height: 250px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    overflow: visible;
    position: relative;
    margin: 0;
    padding: 0;
  }
  
  /* Full size ads - no scaling */
  .ad-container iframe,
  .ad-container > div {
    width: 300px !important;
    height: 250px !important;
    transform: none;
    border: none;
  }
  
  /* Desktop - Single column layout */
  @media (min-width: 769px) {
    .ad-grid {
      flex-direction: column;
      align-items: center;
      justify-content: center;
      max-width: 100%;
      gap: 0;
    }
    
    .ad-container {
      flex: none;
      max-width: 300px;
      width: 300px;
      height: 250px;
      margin: 0;
      padding: 0;
    }
    
    .ad-container iframe,
    .ad-container > div {
      transform: none;
    }
  }
  
  /* Tablet - 2x2 with full size ads */
  @media (min-width: 641px) and (max-width: 768px) {
    .ad-grid {
      justify-content: center;
    }
    
    .ad-container {
      width: 300px;
      height: 250px;
    }
    
    .ad-container iframe,
    .ad-container > div {
      transform: none;
    }
  }
  
  /* Mobile - Full size ads */
  @media (max-width: 640px) {
    .ad-grid {
      gap: 0;
      padding: 0;
      flex-direction: column;
      align-items: center;
    }
    
    .ad-container {
      width: 300px;
      height: 250px;
      flex: none;
      margin: 0;
      padding: 0;
    }
    
    .ad-container iframe,
    .ad-container > div {
      transform: none;
    }
  }
  
  /* Small mobile - Full size ads */
  @media (max-width: 480px) {
    .ad-container {
      width: 300px;
      height: 250px;
    }
    
    .ad-container iframe,
    .ad-container > div {
      transform: none;
    }
  }
  
  /* Extra small screens - Full size ads */
  @media (max-width: 380px) {
    .ad-container {
      width: 300px;
      height: 250px;
    }
    
    .ad-container iframe,
    .ad-container > div {
      transform: none;
    }
  }
  
  /* Ensure mobile-first layout */
  body {
    overflow-x: hidden;
  }
  
  /* Button hover effects */
  .transition-colors {
    transition: background-color 0.2s ease-in-out;
  }
  
  /* Compact Success Section */
  .success-section {
    text-align: center;
    max-width: 350px;
    margin: 0 auto;
    padding: 12px;
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.1), rgba(147, 51, 234, 0.1));
    border-radius: 15px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
  }
  
  .success-icon {
    margin-bottom: 8px;
    animation: bounce 2s infinite;
  }
  
  .success-icon span {
    font-size: 3rem !important;
  }
  
  .success-title {
    font-size: 1.5rem;
    font-weight: 800;
    color: #ffffff;
    margin-bottom: 10px;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
  }
  
  .success-content {
    font-size: 0.85rem;
    line-height: 1.4;
  }
  
  .success-main-text {
    color: #ffffff;
    margin-bottom: 5px;
    font-size: 0.95rem;
  }
  
  .success-sub-text {
    color: #d1d5db;
    margin-bottom: 4px;
  }
  
  .highlight {
    color: #60a5fa;
    text-decoration: underline;
    text-decoration-color: rgba(96, 165, 250, 0.5);
  }
  
  .instagram-shortcut {
    margin-top: 12px;
  }
  
  .instagram-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #e1306c, #fd1d1d, #f77737, #fcaf45);
    color: white;
    padding: 10px 15px;
    border-radius: 12px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    box-shadow: 0 3px 10px rgba(225, 48, 108, 0.3);
    border: none;
    cursor: pointer;
  }
  
  .instagram-btn:hover {
    transform: translateY(-1px);
    box-shadow: 0 4px 15px rgba(225, 48, 108, 0.4);
    background: linear-gradient(135deg, #d12a5b, #e91e1e, #e66d2e, #f0a040);
  }
  
  .instagram-icon {
    font-size: 1.2rem;
    margin-right: 8px;
  }
  
  .instagram-text {
    text-align: left;
  }
  
  .instagram-title {
    font-size: 0.9rem;
    font-weight: 700;
    line-height: 1.1;
  }
  
  .instagram-subtitle {
    font-size: 0.7rem;
    opacity: 0.9;
    line-height: 1.1;
  }
  
  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% {
      transform: translateY(0);
    }
    40% {
      transform: translateY(-10px);
    }
    60% {
      transform: translateY(-5px);
    }
  }
  
  /* Beautiful Action Buttons */
  .action-buttons {
    display: flex;
    flex-direction: column;
    gap: 12px;
    max-width: 350px;
    margin: 0 auto;
    padding: 0;
  }
  
  .action-btn {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    padding: 15px 20px;
    border-radius: 16px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    border: 2px solid transparent;
    backdrop-filter: blur(10px);
    position: relative;
    overflow: hidden;
  }
  
  .action-btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
    transition: left 0.5s ease;
  }
  
  .action-btn:hover::before {
    left: 100%;
  }
  
  .back-btn {
    background: linear-gradient(135deg, #3b82f6, #1d4ed8);
    color: white;
    box-shadow: 0 4px 15px rgba(59, 130, 246, 0.3);
  }
  
  .back-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(59, 130, 246, 0.4);
    background: linear-gradient(135deg, #2563eb, #1e40af);
    border-color: rgba(255, 255, 255, 0.2);
  }
  
  .download-btn {
    background: linear-gradient(135deg, #10b981, #059669);
    color: white;
    box-shadow: 0 4px 15px rgba(16, 185, 129, 0.3);
  }
  
  .download-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(16, 185, 129, 0.4);
    background: linear-gradient(135deg, #059669, #047857);
    border-color: rgba(255, 255, 255, 0.2);
  }
  
  .facebook-btn {
    background: linear-gradient(135deg, #1877f2, #166fe5);
    color: white;
    box-shadow: 0 4px 15px rgba(24, 119, 242, 0.3);
  }
  
  .facebook-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(24, 119, 242, 0.4);
    background: linear-gradient(135deg, #166fe5, #1464d8);
    border-color: rgba(255, 255, 255, 0.2);
  }
  
  .btn-icon {
    font-size: 1.5rem;
    margin-right: 15px;
    filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.2));
  }
  
  .btn-content {
    text-align: left;
    flex: 1;
  }
  
  .btn-title {
    font-size: 1rem;
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 2px;
  }
  
  .btn-subtitle {
    font-size: 0.8rem;
    opacity: 0.9;
    line-height: 1.2;
    font-weight: 400;
  }
  
  /* Mobile responsiveness for success section */
  @media (max-width: 480px) {
    .success-section {
      max-width: 320px;
      padding: 10px;
    }
    
    .success-title {
      font-size: 1.3rem;
      margin-bottom: 8px;
    }
    
    .success-icon {
      margin-bottom: 6px;
    }
    
    .success-icon span {
      font-size: 2.5rem !important;
    }
    
    .instagram-btn {
      padding: 8px 12px;
    }
    
    .instagram-icon {
      font-size: 1.1rem;
      margin-right: 6px;
    }
    
    .instagram-shortcut {
      margin-top: 10px;
    }
    
    .action-buttons {
      max-width: 320px;
      gap: 10px;
    }
    
    .action-btn {
      padding: 12px 16px;
    }
    
    .btn-icon {
      font-size: 1.3rem;
      margin-right: 12px;
    }
    
    .btn-title {
      font-size: 0.9rem;
    }
    
    .btn-subtitle {
      font-size: 0.75rem;
    }
  }
</style>

